# ClawFactory Secrets Configuration
# Copy to secrets.yml and fill in your values
# chmod 600 secrets.yml

# Mode: online (GitHub PRs) or offline (local approval only)
mode: online

# Discord bot configuration
discord:
  # Bot token from Discord Developer Portal
  # https://discord.com/developers/applications
  bot_token: "your-discord-bot-token"

  # Your Discord user ID (right-click your name â†’ Copy User ID)
  # Only these users can send commands via DM
  allowed_user_ids:
    - "123456789012345678"

# GitHub configuration (online mode only)
github:
  # Webhook secret - a shared secret between GitHub and ClawFactory
  # Verifies webhook requests actually come from GitHub
  #
  # Generate with: openssl rand -hex 32
  #
  # After setting here, add this SAME secret to your brain repo's webhook:
  #   https://github.com/YOUR_USER/YOUR_BRAIN_REPO/settings/hooks/new
  #
  # Webhook settings on GitHub:
  #   Payload URL: https://your-controller-domain/webhook/github
  #   Content type: application/json
  #   Secret: (paste this same value)
  #   Events: Select "Pull requests" only
  #
  webhook_secret: "your-webhook-secret"

  # GitHub usernames allowed to merge PRs that trigger promotion
  # Only merges by these users will trigger config promotion
  # Comma-separated list
  allowed_merge_actors: "yourusername,trustedcollab"

# AI Provider
anthropic:
  # API key from https://console.anthropic.com/
  api_key: "sk-ant-api03-..."

# Optional: Cloudflare AI Gateway (routes through CF for logging/caching)
